                android:targetClass="src.comitton.config.BookShelfFileSelectActivity"
                android:targetPackage="@string/application_id" >
                <extra android:name="i" android:value="4" />
            </intent>
        </PreferenceScreen>
        <PreferenceScreen
            android:key="BookShelfFileSelectActivit6"
            android:title="Select a file for Custom Image 6"
            android:summary="Register custom bookshelf image 6" >
            <intent
                android:targetClass="src.comitton.config.BookShelfFileSelectActivity"
                android:targetPackage="@string/application_id" >
                <extra android:name="i" android:value="5" />
            </intent>
        </PreferenceScreen>
        <PreferenceScreen
            android:key="BookShelfFileSelectActivit7"
            android:title="Select a file for Custom Image 7"
            android:summary="Register custom bookshelf image 7" >
            <intent
                android:targetClass="src.comitton.config.BookShelfFileSelectActivity"
                android:targetPackage="@string/application_id" >
                <extra android:name="i" android:value="6" />
            </intent>
        </PreferenceScreen>
        <PreferenceScreen
            android:key="BookShelfFileSelectActivit8"
            android:title="Select a file for Custom Image 8"
            android:summary="Register custom bookshelf image 8" >
            <intent
                android:targetClass="src.comitton.config.BookShelfFileSelectActivity"
                android:targetPackage="@string/application_id" >
                <extra android:name="i" android:value="7" />
            </intent>
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>
